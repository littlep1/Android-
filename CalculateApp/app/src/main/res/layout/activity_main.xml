<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:background="@null"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="true"
        android:gravity="bottom|end"
        android:maxLines="2"
        android:textColor="#36000000"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/under_res"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="true"
        android:gravity="bottom|end"
        android:hint="0"
        android:maxLines="2"
        android:textColor="#000000"
        android:textColorHighlight="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@null"
        android:textSize="40sp" /><!--        android:background="@null"-->

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="Back"
            android:textAllCaps="true"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="17sp" />
        <!--            android:background="@drawable/setbar_bg"-->

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="C"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/left_bracket"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="("
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/right_bracket"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text=")"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/pow"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="^"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="√"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sin"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Sin(x)"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/cos"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="cos(x)"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/tan"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="tan(x)"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/pi"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="π"
            android:textAllCaps="false"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="/"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="7"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="8"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="9"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="×"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="4"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="5"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="6"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="1"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="2"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="3"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#FF9800"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="."
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/num0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="0"
            style="?android:attr/buttonStyle"
            android:background="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="="
            android:textColor="#FFFFFF"
            style="?android:attr/buttonStyle"
            android:background="#FF9800"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>
